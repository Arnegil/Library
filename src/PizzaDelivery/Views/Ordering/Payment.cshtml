@using PizzaDelivery.Extensions
@using PizzaDelivery.ViewModel.ViewModels.Ordering
@model PizzaDelivery.ViewModel.ViewModels.Ordering.PaymentInfoVM
@{
    ViewData["Title"] = "Payment";
}

<h2>Оплата</h2>

@using (Html.BeginForm("SavePaymentInfo", "Payment", Model, FormMethod.Post))
{
    <table class="delivery_info">
        <tr>
            <td>@Html.DisplayNameFor(x => x.CardNumber)</td>
            <td>@Html.EditorFor(x => x.CardNumber)</td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(x => x.CardOwnerName)</td>
            <td>@Html.EditorFor(x => x.CardOwnerName)</td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(x => x.DateTo)</td>
            <td>@Html.EditorFor(x => x.DateTo)</td>
        </tr>
        <tr>@Html.DropDownListFor(x => x.PaymentType, new List<SelectListItem>(typeof(PaymentType).GetEnumValues<PaymentType>().Select(x => new SelectListItem() { Text = x.GetDescription(), Value = x.GetDescription() })))</tr>
    </table>
    <div class="delivery_info_btn">
        <button class="btn btn-primary" type="submit">Заказать</button>
    </div>
}
